---
import QRCode from "qrcode";
import data from "../data/qr.json"; // Import JSON data

const qrCodeDataUrl = await QRCode.toDataURL(data.url); // Generate QR code
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QR Code Page</title>
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #1e1e2e, #3a3a52);
      }
      img {
        width: 200px;
        height: 200px;
        padding: 20px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      }
    </style>
  </head>
  <body>
    <img src={qrCodeDataUrl} alt="QR Code" />
  </body>
</html>

