---
import QRCode from "qrcode";
import data from "../data/qr.json"; // Load JSON data

const qrCodeDataUrl = await QRCode.toDataURL(data.url); // Generate QR code
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{data.title}</title>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #1e1e2e, #3a3a52);
        font-family: Arial, sans-serif;
        color: white;
        padding: 20px;
      }
      .container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        align-items: center;
        max-width: 800px;
      }
      .card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 20px;
        width: 100%;
        max-width: 300px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      }
      .qr-card img {
        width: 100%;
        max-width: 200px;
        background: white;
        padding: 10px;
        border-radius: 8px;
      }
      .text-card {
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
      }
      h1 {
        font-size: 20px;
        margin-bottom: 10px;
      }
      p {
        font-size: 16px;
        opacity: 0.8;
      }

      /* Responsive Design */
      @media (min-width: 600px) {
        .container {
          flex-wrap: nowrap;
        }
        .card {
          width: 45%;
          max-width: 300px;
        }
        .text-card {
          text-align: left;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- QR Code Card -->
      <div class="card qr-card">
        <img src={qrCodeDataUrl} alt="QR Code" />
      </div>

      <!-- Text Card -->
      <div class="card text-card">
        <h1>{data.title}</h1>
        <p>{data.description}</p>
      </div>
    </div>
  </body>
</html>

